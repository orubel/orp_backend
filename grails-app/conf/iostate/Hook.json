// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward

net.nosegrind.Hook
*/

	
{
    "NAME":"hook",
    "VALUES": {
        "id": {
            "type": "PKEY",
            "description":"ID for Hook"
        },
        "version": {
            "type": "Long",
            "description":"Version for Updating Hook"
        },
        "user": {
            "type": "FKEY",
            "description":"User relationship"
        },
        "url": {
            "type": "String",
            "description":"Subscribers Receiving URL for Hook"
        },
        "format": {
            "type": "String",
            "description":"JSON/XML"
        },
        "service": {
            "type": "String",
            "description":"Api Service being Subscribed to"
        }
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DEFAULTACTION":"list",
	        "URI": {
	        	"list":{
	             	"METHOD":"GET",
	            	"DESCRIPTION":"List Hook",
	            	"ROLES":{
			    "DEFAULT":["ROLE_ADMIN"],
			    "BATCH":["ROLE_ADMIN"],
			    "HOOK":["ROLE_ADMIN"]
			},
	                "REQUEST": {
	                    "permitAll":[]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","version","user","url","format","service"]
	                }
	        	},
	            "show": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Show Hooks",
	            	"ROLES":{
			    "DEFAULT":["ROLE_ADMIN"],
			    "BATCH":["ROLE_ADMIN"],
			    "HOOK":["ROLE_ADMIN"]
			},
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","version","user","url","format","service"]
	                }
	            },
	            "create":{
	             	"METHOD":"PUT",
	            	"DESCRIPTION":"Create Hook",
	            	"ROLES":{
			    "DEFAULT":["ROLE_ADMIN"],
			    "BATCH":["ROLE_ADMIN"],
			    "HOOK":["ROLE_ADMIN"]
			},
	                "REQUEST": {
	                    "permitAll":["url","format","service"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","version"]
	                }
	            },
	            "update": {
	            	"METHOD":"POST",
	            	"DESCRIPTION":"Update Hook",
	            	"ROLES":{
			    "DEFAULT":["ROLE_ADMIN"],
			    "BATCH":["ROLE_ADMIN"],
			    "HOOK":["ROLE_ADMIN"]
			},
	                "REQUEST": {
	                    "permitAll":["id","version","url","format","service"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id","version"]
	                }
	            },
	            "delete":{
	            	"METHOD":"DELETE",
	            	"DESCRIPTION":"Delete Hook",
	            	"ROLES":{
			    "DEFAULT":["ROLE_ADMIN"],
			    "BATCH":["ROLE_ADMIN"],
			    "HOOK":["ROLE_ADMIN"]
			},
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                }
	            },
	            "reset":{
	            	"METHOD":"GET",
	            	"DESCRIPTION":"Reset Hook attempts",
	            	"ROLES":{
			    "DEFAULT":["ROLE_ADMIN"],
			    "BATCH":["ROLE_ADMIN"],
			    "HOOK":["ROLE_ADMIN"]
			},
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                }
	            }
	        }
		}
	}
}
